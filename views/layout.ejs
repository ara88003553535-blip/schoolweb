<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>School Online</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/style.css" rel="stylesheet" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">School Online</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav" aria-controls="nav" aria-expanded="false">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="nav">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item"><a class="nav-link" href="/news">Новости</a></li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Расписания</a>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/schedule/class/1">Расписание классов</a></li>
                <li><a class="dropdown-item" href="/schedule/class/2">Общее расписание</a></li>
              </ul>
            </li>
            <li class="nav-item"><a class="nav-link" href="#">Звонки</a></li>
            <% if (user && user.role === 'admin') { %>
              <li class="nav-item"><a class="nav-link" href="/admin">Админ</a></li>
            <% } %>
          </ul>
          <ul class="navbar-nav">
            <% if (user) { %>
              <li class="nav-item"><span class="nav-link">Привет, <%= user.name %> (<%= user.role %>)</span></li>
              <li class="nav-item"><a class="nav-link" href="/logout">Выйти</a></li>
            <% } else { %>
              <li class="nav-item"><a class="nav-link" href="/login">Войти</a></li>
              <li class="nav-item"><a class="nav-link" href="/register">Регистрация</a></li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <%- body %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
