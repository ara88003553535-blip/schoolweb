<%- include('layout', { body: (function(){ %>
  <h2>Новости</h2>
  <% if (user && user.role === 'admin') { %>
    <form method="post" action="/news" class="mb-4">
      <div class="mb-2"><input class="form-control" name="title" placeholder="Заголовок"/></div>
      <div class="mb-2"><textarea class="form-control" name="body" placeholder="Текст"></textarea></div>
      <button class="btn btn-success">Создать новость</button>
    </form>
  <% } %>

  <% articles.forEach(a => { %>
    <div class="card mb-2">
      <div class="card-body">
        <h5 class="card-title"><a href="/news/<%= a.id %>"><%= a.title %></a></h5>
        <h6 class="card-subtitle mb-2 text-muted">Автор: <%= a.authorName %> — <%= new Date(a.createdAt).toLocaleString() %></h6>
        <p class="card-text"><%= a.body.slice(0, 200) %>...</p>
      </div>
    </div>
  <% }) %>
<% }).call(this) }) %>
